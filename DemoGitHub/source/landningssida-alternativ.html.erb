<div class="u-wrapper">
  <div class="TextPage">

    <div class="PageTop">
      <div class="PageTop-breadcrumbs">
        <%= partial 'partials/components/breadcrumbs', locals: { items: ['Hyra släp &amp; bil', 'Villkor'] } %>
