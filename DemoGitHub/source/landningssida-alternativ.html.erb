              <%= partial 'partials/components/featured_block', locals: { headline: 'Hyr släp – boka online' } %>
            </div>
          </div>
        </div>

      </div>

      <aside class="LargeMain-sidebar">
        <div class="u-group">
          <%= partial 'partials/components/sidebar' %>
        </div>
      </aside>
    </div>
  </div>
</div>

