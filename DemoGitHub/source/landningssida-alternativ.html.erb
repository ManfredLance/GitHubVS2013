            <div class="ContentBlock ContentBlock--green">
              <%= partial 'partials/components/featured_block', locals: { headline: 'Anslut kort &amp; spara pengar' } %>
            </div>
          </div>

          <div class="PromotionBlocks-block PromotionBlocks-block--small">
            <div class="ContentBlock ContentBlock--green">
              <%= partial 'partials/components/featured_block', locals: { headline: 'Hyr släp – boka online' } %>
            </div>
          </div>

